{
  "name": "privacy-pool-paymasters",
  "version": "1.0.0",
  "description": "ERC-4337 paymaster implementation for Privacy Pool withdrawals with embedded proof validation and modular account factory support",
  "scripts": {
    "e2e": "ts-node scripts/PaymasterE2E.ts",
    "deploy": "anvil --fork-url https://mainnet.base.org --host 0.0.0.0 --port 8545 & sleep 3 && forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast --legacy --skip-simulation; kill %1",
    "deploy:counter": "forge script script/DeployCounter.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:counter:local": "forge script script/DeployCounter.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:withdrawal-verifier": "forge script script/DeployWithdrawalVerifier.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:withdrawal-verifier:local": "forge script script/DeployWithdrawalVerifier.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:commitment-verifier": "forge script script/DeployCommitmentVerifier.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:commitment-verifier:local": "forge script script/DeployCommitmentVerifier.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:entrypoint": "forge script script/DeployEntrypoint.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:entrypoint:local": "forge script script/DeployEntrypoint.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:privacy-pool": "forge script script/DeployPrivacyPool.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:privacy-pool:local": "forge script script/DeployPrivacyPool.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:paymaster": "forge script script/DeployPaymaster.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:paymaster:local": "forge script script/DeployPaymaster.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:account-validator": "forge script script/DeployAccountValidator.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "deploy:account-validator:local": "forge script script/DeployAccountValidator.s.sol --rpc-url http://localhost:8545 --broadcast",
    "test": "forge test",
    "build": "forge build"
  },
  "dependencies": {
    "@0xbow/privacy-pools-core-sdk": "^0.1.15",
    "@account-abstraction/contracts": "0.7.0",
    "@zk-kit/lean-imt": "2.2.2",
    "@zk-kit/lean-imt.sol": "2.0.0",
    "ethers": "^6.15.0",
    "maci-crypto": "^1.2.0",
    "openzeppelin-contracts": "^4.0.0",
    "permissionless": "0.2.0",
    "poseidon-solidity": "0.0.5",
    "snarkjs": "^0.7.4",
    "viem": "2.23.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.2.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "17.2.1",
    "hardhat": "^2.26.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}